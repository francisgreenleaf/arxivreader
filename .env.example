# ArXiv Reader API Configuration
# Copy this file to .env and update with your values

# Application Settings
APP_NAME=ArXiv Reader API
FLASK_ENV=development
FLASK_DEBUG=True

# Server Settings
FLASK_HOST=0.0.0.0
FLASK_PORT=5001

# CORS Settings (comma-separated origins)
CORS_ORIGINS=*

# Data Directories
# DATA_DIR=/path/to/data (defaults to ./data)

# Cache Settings
CACHE_ENABLED=True
CACHE_MAX_AGE=86400

# ArXiv API Settings
ARXIV_API_BASE_URL=http://export.arxiv.org/api/query
ARXIV_HTML_BASE_URL=https://ar5iv.labs.arxiv.org/html
ARXIV_MAX_RESULTS=50
ARXIV_REQUEST_TIMEOUT=30

# Chatbot Settings
CHATBOT_MAX_TOKENS=4000
CHATBOT_DEFAULT_TEMPERATURE=0.7
CHATBOT_DEFAULT_PROVIDER=openai

# Security Settings (REQUIRED for production)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
# SECRET_KEY=your-secret-key-here
# ENCRYPTION_KEY=your-encryption-key-here

# Rate Limiting
RATE_LIMIT_ENABLED=False
RATE_LIMIT_DEFAULT=100/hour

# Logging
LOG_LEVEL=INFO
# LOG_FILE=/path/to/logfile.log

# Production Configuration
# When FLASK_ENV=production, ensure:
# - SECRET_KEY and ENCRYPTION_KEY are set
# - CORS_ORIGINS is set to your domain (not *)
# - FLASK_DEBUG=False
# - RATE_LIMIT_ENABLED=True
